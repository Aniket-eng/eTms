<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/colorOnPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nullPass"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:text="Bus pass does not exist,you can apply for bus pass to avail bus services."
        android:textColor="#848484">
    </TextView>

    <ImageView
        android:id="@+id/tata"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/logo1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainView"
        android:visibility="gone"
        android:fitsSystemWindows="true">

        <ScrollView
            android:id="@+id/scrollableContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/tata"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_profile_details"
                    android:background="@drawable/gradient_baclground"
                    android:paddingBottom="10dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">
                    <ImageView
                        android:gravity="center"
                        android:id="@+id/iv_arrow"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l_start_point"
                        android:src="@drawable/ic_route_icon"/>
                    <LinearLayout
                        android:id="@+id/l_start_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/l_start_point_text"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_arrow">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/l_location_text"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:id="@+id/ll_only_pickup"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_location"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick Up - "
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/tv_only_pick_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:id="@+id/ll_only_drop"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_location"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop - "
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/tv_only_drop_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/both_trip_layout"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/ll_location">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/tv_pickup_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick Up - "
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"

                            />
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/tv_pickTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/tv_pickup_text"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/bus_pass_robot_medium"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop - "
                            android:layout_marginStart="10dp"
                            app:layout_constraintEnd_toStartOf="@+id/tv_dropTime"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/bus_pass_robot_medium"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/tv_dropTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/bus_pass_robot_medium"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/bus_pass_detail"
                    android:background="@drawable/background_with_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/rl_profile_details"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="2dp">
                    <LinearLayout
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#848484"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bus_pass_name"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/employee_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#848484"
                            android:gravity="right"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Employee ID" style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/employee_name_text_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/employee_id"
                        android:layout_below="@+id/name"
                        android:layout_alignParentLeft="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:id="@+id/employee_name_text"
                            android:paddingLeft="20dp"
                            android:paddingBottom="10dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="1"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/employee_id_text_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_below="@+id/employee_id"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:gravity="right"
                            android:id="@+id/employee_id_text"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/busstop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/employee_name_text_lay">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#848484"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bus_stop_name"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bus_route_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/employee_id_text_lay"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#848484"
                            android:gravity="right"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bus_route_type"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bus_stop_name_text_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/bus_route_type"
                        android:layout_below="@+id/busstop_name"
                        android:layout_alignParentLeft="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:id="@+id/bus_stop_name_text"
                            android:paddingLeft="20dp"
                            android:paddingBottom="10dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="1"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/route_type_text_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_below="@+id/bus_route_type"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:gravity="right"
                            android:id="@+id/route_typee_text"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/bus_stop_name_text_lay">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#848484"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Date"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/route_type_text_lay"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#848484"
                            android:gravity="right"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="End Date"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/start_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_below="@+id/start_date">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:gravity="left"
                            android:id="@+id/start_date_text_con"
                            android:paddingLeft="20dp"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/end_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_below="@+id/start_date"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:gravity="right"
                            android:id="@+id/end_date_text_con"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bus_route_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/start_date_text">
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:gravity="center"
                            android:id="@+id/bus_route_name_text"
                            android:text=""
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/bus_pass_robot_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/pick_drop_ll_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="12dp"
                        android:layout_below="@+id/bus_route_name"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>






</RelativeLayout>